/* ===== PAGE LAYOUT ===== */
.book-delivery-page {
  background: #eff5f1 url("../../assets/images/path50.png");
  min-height: 100vh;
  font-family: "Inter", sans-serif;
  padding-bottom: 100px;
}

/* ===== HEADER ===== */
.header {
  width: 100%;
  padding: 18px 50px;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}

.header-logo {
  font-size: 22px;
  font-weight: 700;
  color: #0a4d26;
}

.header-nav a {
  margin: 0 16px;
  text-decoration: none;
  color: #333;
  font-size: 16px;
}

.header-nav a,
.header-nav a:visited {
  color: #333;
}

.header-nav a:hover {
  color: #f9a826;
  text-decoration: underline;
}
.header-buttons button {
  padding: 8px 18px;
  border-radius: 6px;
  border: none;
  cursor: pointer;
  font-size: 15px;
}

.login-btn {
  background: transparent;
  border: 1px solid #0a4d26;
  color: #0a4d26;
  margin-right: 10px;
}
.login-btn:hover {
  background: #f0f0f0;
}

.signup-btn {
  background: #0a4d26;
  color: white;
}
.signup-btn:hover {
  background: #073d20;
}

/* ===== FORM WRAPPER ===== */
.form-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 40px;
}

.form-card {
  width: 100%;
  max-width: 600px;
  background: white;
  padding: 40px;
  border-radius: 16px;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

/* ===== TITLES ===== */
.form-title {
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 5px;
  text-align: center;
}

.form-subtitle {
  color: #666;
  margin-bottom: 30px;
  text-align: center;
}

/* ===== PROGRESS STEPS ===== */
.progress-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 35px;
  position: relative;
}

.step {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step:not(:last-child)::after {
  content: "";
  position: absolute;
  top: 22px;
  right: -50%;
  width: 100%;
  border-top: 2px dashed #d6d6d6;
  z-index: 0;
}

.step-circle {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background: #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  color: #6b6b6b;
  margin-bottom: 8px;
  z-index: 2;
}

.step-label {
  font-size: 13px;
  color: #999;
  text-align: center;
}

.step.active .step-circle {
  background: #f9a826;
  color: #fff;
  box-shadow: 0 6px 16px rgba(249, 168, 38, 0.18);
