.section-title {
  font-size: 18px;
  margin: 15px 0;
  font-weight: 600;
  color: #0a4d26;
}

.form-section input,
.form-section select,
.form-section textarea {
  width: 100%;
  margin-bottom: 14px;
  padding: 12px;
  border-radius: 8px;
  border: 1px solid #ddd;
  font-size: 15px;
}

textarea {
  height: 100px;
  resize: none;
}

.delivery-class-section {
  margin-top: 30px;
}

